package vn.amabuy.pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.support.FindBy;

import net.serenitybdd.core.pages.PageObject;

public class RegisterPage extends PageObject {
	 @FindBy(xpath = "//input[@placeholder='Email hoặc số điện thoại']") public WebElement userId;
		 
	 @FindBy(xpath = "//input[@placeholder = 'Mật khẩu']") public WebElement passWordId;
	 
	 @FindBy(xpath = "//a[@href = '/forgot']") WebElement returnPassWord;
	 
	 @FindBy(xpath = "//input[@class = 'form-check-input']") WebElement noteOnBrower;
	 
	 @FindBy(xpath = "//button[@class = 'btn btn-login']") WebElement btnLogin;
	 
	 @FindBy(xpath = "//button[@class = 'btn btn-fb']") WebElement btnLonginFB;
	 
	 @FindBy(xpath = "//button[@class = 'btn btn-google']") WebElement btnLonginGG;
	 
	public void findElementBy() {
		WebDriver driver = new FirefoxDriver();
		driver.get("http://amabuy.vn");
		
		driver.findElement(By.xpath("//input[@placeholder =\"Mật khẩu\"]"));
		//<a href="/forgot">Quên mật khẩu ?</a>
		driver.findElement(By.xpath("//a[@href = '/forgot']"));
		//    cú pháp để lấy theo xpath 
		//   //tên thẻ[@tên thuộc tính = 'giá trị của thuộc tính']
		driver.findElement(By.xpath("//input[@class = 'form-check-input']"));
		
		driver.findElement(By.xpath("//button[@class = 'btn btn-login']"));
		
		driver.findElement(By.xpath("//button[@class = 'btn btn-fb']"));
		
		driver.findElement(By.xpath("//button[@class = 'btn btn-google']"));
		
		
			}
}
